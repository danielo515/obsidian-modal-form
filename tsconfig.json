{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES6",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "verbatimModuleSyntax": false,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "types": [
            "jest",
            "node",
            "svelte",
        ],
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES7"
        ],
        "paths": {
            "@std": [
                "src/std"
            ]
        }
    },
    "include": [
        "src/**/*",
    ]
}